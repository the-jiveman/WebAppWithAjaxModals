@model WebAppWithAjaxModals.Models.Person

@Html.AntiForgeryToken()

@Html.HiddenFor(model => model.Id)

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger text-danger" })

    <div class="form-group">
        <label class="control-label col-md-5">Term</label>
        <div class="col-md-7 form-inline">
            @Html.LabelFor(model => model.Prefix, htmlAttributes: new { @class = "sr-only" })
            @Html.DropDownListFor(model => model.Prefix, Model.PrefixOptions, "", htmlAttributes: new { @class = "form-control" })

            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "sr-only" })
            @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control form-control-xs", placeholder = "YY" } })

            <div>
                @Html.ValidationMessageFor(model => model.Prefix, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

</div>